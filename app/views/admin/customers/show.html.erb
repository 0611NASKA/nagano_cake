<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="section-ttl"><%= @customer.full_name_a %>さんのページ</h2>
      <table class="table table-striped table-bordered">
        <tr>
          <th>姓</th>
          <td><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>名</th>
          <td><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>セイ</th>
          <td><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>メイ</th>
          <td><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
            <td>有効</td>
          <% else %>
            <td>退会済</td>
          <% end %>
        </tr>
        <tr>
				  <td><%= link_to "編集", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>