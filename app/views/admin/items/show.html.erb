<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom"><%= @item.name %>詳細</h2>
      <table class="table table-striped table-bordered table-hover table-sm">
        <tr>
          <th>商品ID</th>
          <td><%= @item.id %></td>
        </tr>
        <tr>
          <th>商品画像</th>
          <td><%= image_tag @item.get_image, size: '50x50' %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>説明文</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル名</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <th>説明文</th>
          <% if @item.is_active == true %>
            <td>販売中</td>
          <% else %>
            <td>販売停止中</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>