<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-danger">
    <div class="container">
      <% if admin_signed_in? %>
        <a class="navbar-brand text-white" href="/admin">NaganoCake(管理者)</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="search-form float-right">
    <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</header>