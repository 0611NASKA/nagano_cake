<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">注文情報入力</h2>
      <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
        <h3><%= f.label :payment_method, "支払方法" %></h3>
        <div class="form-group">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
        <h3><%= f.label :address, "お届け先" %></h3>
        <div class="form-group">
          <%= f.radio_button :address_option, 0, checked: "checked" %>
	        <%= f.label :address, "ご自身の住所" %>
          <%= @customer.address_display %>
        </div>
        <div class="form-group">
          <%= f.radio_button :address_option, 1 %>
	        <%= f.label :address, "登録済住所から選択" %>
	        <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display) %>
        </div>
        <div class="form-group">
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address, "登録済住所から選択" %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
	        <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
	        <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <%= f.label :name, "宛名" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>