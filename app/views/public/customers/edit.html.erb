<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">ユーザー情報編集</h2>
      <div class="float-right">
        <%= link_to "退会", customers_unsubscribe_path %>
      </div>
      <%= form_with model: @customer, url: customers_path, local:true do |f| %>
        <%= render 'layouts/errors', obj: @customer %>
        <div class="form-group">
          <%= f.label "姓" %>
          <%= f.text_field :last_name, class: "form-control last_name" %>
        </div>
        <div class="form-group">
          <%= f.label "名" %>
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
        <div class="form-group">
          <%= f.label "セイ" %>
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
        </div>
        <div class="form-group">
          <%= f.label "メイ" %>
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.label "郵便番号" %>
          <%= f.text_field :postal_code, class: "form-control postal_code" %>
        </div>
        <div class="form-group">
          <%= f.label "住所" %>
          <%= f.text_field :address, class: "form-control address" %>
        </div>
        <div class="form-group">
          <%= f.label "電話番号" %>
          <%= f.text_field :telephone_number, class: "form-control telephone_number" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>