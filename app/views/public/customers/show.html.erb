<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom">マイページ</h2>
      <div class="float-right">
        <%= link_to "編集する", customers_edit_path %> |
        <%= link_to "パスワード変更", "#" %> |
        <%= link_to "配送先一覧", addresses_path %> |
        <%= link_to "注文履歴一覧", orders_path %>
      </div>
      <table class="table table-striped table-bordered">
        <tr>
          <th>姓</th>
          <td><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>名</th>
          <td><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>セイ</th>
          <td><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>メイ</th>
          <td><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
      </table>
    </div>
  </div>
</div>