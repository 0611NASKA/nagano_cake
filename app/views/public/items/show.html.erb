<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <h2 class="border-bottom"><%= @item.name %>詳細</h2>
      <table class="table table-striped table-bordered table-hover">
        <tr>
          <th>商品画像</th>
          <td><%= image_tag @item.get_image, size: '50x50' %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>税込価格</th>
          <td><%= @item.add_tax_price %></td>
        </tr>
      </table>
      <p>数量を選択してください</p>
      <%= form_with model: @cart_item, url: cart_items_path, merhod: :post do |f| %>
        <div class="form-group">
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, *[1..10], selected: 1 %>
        </div>
        <div class="form-group">
          <%= f.submit "カートに入れる", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>